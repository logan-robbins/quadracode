# Docker-only overrides for service hostnames inside the compose network
QUADRACODE_LOCAL_DEV_MODE=0
MCP_REDIS_SERVER_URL=http://redis-mcp:8000/mcp
MCP_REDIS_TRANSPORT=streamable_http

AGENT_REGISTRY_URL=http://agent-registry:8090

# Redis inside the compose network
REDIS_HOST=redis
REDIS_PORT=6379

# Stream and metrics defaults (compose network)
CONTEXT_METRICS_STREAM=qc:context:metrics
AUTONOMOUS_EVENTS_STREAM=qc:autonomous:events
QUADRACODE_METRICS_ENABLED=1
QUADRACODE_METRICS_EMIT_MODE=stream
QUADRACODE_METRICS_REDIS_URL=redis://redis:6379/0
QUADRACODE_METRICS_STREAM_KEY=qc:context:metrics
QUADRACODE_SUPERVISOR_RECIPIENT=human

# Optional service stacks (used only if you enable them)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpass

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=quadracode
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespass

# Shared volume for filesystem MCP server
SHARED_PATH=/shared

# API keys for live model/tool calls (required for e2e tests)
# DO NOT COMMIT REAL KEYS â€” leave empty and set locally
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
FIRECRAWL_API_KEY=
BRIGHT_DATA_API_KEY=
SCRAPINGBEE_API_KEY=
GITHUB_TOKEN=
GOOGLE_API_KEY=
BING_SEARCH_API_KEY=

# Optional deterministic agent id seed
AGENT_ID_SEED=

# Atlassian MCP cache directory (volume must be mounted when enabled)
MCP_REMOTE_CACHE_DIR=/var/lib/mcp-remote

# Agent auto-registration
QUADRACODE_AGENT_AUTOREGISTER=1
QUADRACODE_AGENT_HEARTBEAT_INTERVAL=15

# Workspace engine defaults (compose)
QUADRACODE_WORKSPACE_IMAGE=quadracode-workspace:latest
QUADRACODE_WORKSPACE_NETWORK=quadracode_default
QUADRACODE_WORKSPACE_STREAM_PREFIX=qc:workspace
QUADRACODE_WORKSPACE_REDIS_URL=${QUADRACODE_METRICS_REDIS_URL}
