# Development mode flags (host defaults)
QUADRACODE_LOCAL_DEV_MODE=1

# MCP runtime configuration (host environment)
MCP_REDIS_SERVER_URL=http://127.0.0.1:8000/mcp
MCP_REDIS_TRANSPORT=streamable_http

# Optional: persistent cache for MCP remotes (set if using Atlassian MCP)
# MCP_REMOTE_CACHE_DIR=/var/lib/mcp-remote

# Agent Registry (host URL)
AGENT_REGISTRY_URL=http://localhost:8090

# Redis (host access)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Stream and metrics defaults (host)
CONTEXT_METRICS_STREAM=qc:context:metrics
AUTONOMOUS_EVENTS_STREAM=qc:autonomous:events
QUADRACODE_METRICS_ENABLED=1
QUADRACODE_METRICS_EMIT_MODE=stream
QUADRACODE_METRICS_REDIS_URL=redis://127.0.0.1:6379/0
QUADRACODE_METRICS_STREAM_KEY=qc:context:metrics
QUADRACODE_SUPERVISOR_RECIPIENT=human

# LangGraph checkpoint persistence (PostgreSQL)
# When set, the runtime uses AsyncPostgresSaver for persistent checkpoints.
# When unset, falls back to MemorySaver (in-memory, lost on restart).
# For local dev with Docker Postgres: postgresql://quadracode:quadracode@localhost:5432/quadracode
# DATABASE_URL=

# Neo4j / Postgres placeholders (used if you enable those stacks)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpass

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quadracode
POSTGRES_USER=quadracode
POSTGRES_PASSWORD=quadracode

# API Keys for live model/tool calls (required for e2e tests)
# DO NOT COMMIT REAL KEYS â€” leave empty and set locally
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
FIRECRAWL_API_KEY=
BRIGHT_DATA_API_KEY=
SCRAPINGBEE_API_KEY=
GITHUB_TOKEN=
GOOGLE_API_KEY=
BING_SEARCH_API_KEY=

# Agent config
AGENT_ID_SEED=
SHARED_PATH=/shared
QUADRACODE_AGENT_AUTOREGISTER=1
QUADRACODE_AGENT_HOST=localhost
QUADRACODE_AGENT_PORT=8123
QUADRACODE_AGENT_HEARTBEAT_INTERVAL=15

# Context engine configuration
# QUADRACODE_OPTIMAL_CONTEXT_SIZE=10000
# QUADRACODE_MESSAGE_BUDGET_RATIO=0.6

# Workspace engine defaults (host)
QUADRACODE_WORKSPACE_IMAGE=quadracode-workspace:latest
QUADRACODE_WORKSPACE_NETWORK=quadracode_default
QUADRACODE_WORKSPACE_STREAM_PREFIX=qc:workspace
QUADRACODE_WORKSPACE_REDIS_URL=${QUADRACODE_METRICS_REDIS_URL}

# UI defaults
UI_BARE=0
