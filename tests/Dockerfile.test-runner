# Test runner container for E2E tests
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.cargo/bin:$PATH"

# Create app directory
WORKDIR /app

# Copy entire project (for standalone builds)
# In docker-compose, this will be overridden by volume mount
COPY . .

# Create virtual environment
RUN uv venv /app/.venv

# Install ALL dependencies (including dev/test dependencies)
RUN uv sync

# Make test runner scripts executable
RUN chmod +x /app/tests/e2e_advanced/run_individual_tests.sh || true
RUN chmod +x /app/tests/e2e_advanced/run_tests.py || true

# Set Python path and activate venv in PATH
ENV PYTHONPATH=/app
ENV PATH="/app/.venv/bin:$PATH"
ENV VIRTUAL_ENV=/app/.venv

# Default command (can be overridden)
CMD ["sleep", "infinity"]
